<% include ./partials/header.ejs %>
  <div class="ui main text container segment">
		<div class="ui huge header">Buy Product</div>
		<form id="products-form" action="/buyProduct/<%= product._id %>" method="POST" class="ui form">
		  	<div class="field">
	        <label for="productName">Product Name: </label><br>
	        <input class="form-control" type="text" name="product[productName]" placeholder="New product name" value="<%= product.productName %>" />
        </div>
				</br>
        <div class="ui three column grid">
          <div class="column">
            <div class="field">
              <label for="price">Price: </label><br>
              <input class="form-control" type="number" min="0" max="5" step="0.05" name="product[price]" placeholder="Price" id="buyingPrice" value="<%= product.price %>" readonly="readonly" />
            </div>
          </div>
          <div class="column">
            <div class="field">
              <label for="price">Total: </label><br>
              <input class="form-control" type="text" placeholder="subtotal" id="subtotal" value="" readonly="readonly" />
            </div>
          </div>
          <div class="column">
            <div class="field">
						  <label for="amount">Units to buy:</label><br>
						  <select class="form-control ui selection dropdown" name="product[amount]" id="buyingAmount">
              <% for(var i = 1; i <= product.amount; i++){ %>
                <% if(i === product.amount) { %>
                  <option value="<%= product.amount %>" selected><%= product.amount %></option>
                <% } %>
                <option value="<%= i %>"><%= i %></option>
              <% } %>
              </select>
            </div>
          </div>
        </div>
        <br />
        <input id="submitBuying" class="ui green button" type="submit" name="submit" value="Buy product" />
      <br />
		</form>
	</div>
<% include ./partials/footer.ejs %>
